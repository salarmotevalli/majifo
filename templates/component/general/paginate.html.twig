{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
    <div class="inline-block">
        <div class="flex items-baseline flex-row   w-auto">
        {% if first is defined and current != first %}
            <span class="bg-white text-indigo-600 px-2 py-1 text-sm border-r border-gray-400 rounded-lg font-bold">
                <a href="{{ path(route, knp_pagination_query(query, first)) }}">&lt;&lt;</a>
            </span>
        {% endif %}

        {% if previous is defined %}
            <span class="bg-white text-indigo-600 px-2 py-1 text-sm  border-r border-gray-400 rounded-lg">
                <a rel="prev" href="{{ path(route, knp_pagination_query(query, previous)) }}">&lt;</a>
            </span>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <span class="bg-white text-indigo-600 px-2 py-1 text-sm border-r  border-gray-400 rounded-lg">
                    <a href="{{ path(route, knp_pagination_query(query, page)) }}">{{ page }}</a>
                </span>
            {% else %}
                <span class="bg-indigo-600 rounded-lg text-white px-2 py-1 text-sm font-bold">{{ page }}</span>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <span class="bg-white text-indigo-600 px-2 py-1 text-sm border-r border-gray-400 rounded-lg">
                <a rel="next" href="{{ path(route, knp_pagination_query(query, next)) }}">&gt;</a>
            </span>
        {% endif %}

        {% if last is defined and current != last %}
            <span class="bg-white text-indigo-600 px-2 py-1 text-sm border-gray-400 rounded-lg font-bold">
                <a href="{{ path(route, knp_pagination_query(query, last)) }}">&gt;&gt;</a>
            </span>
        {% endif %}
        </div>
    </div>
{% endif %}
